{
  "manifest_version": 3,

  "name": "Let's Cookie!",
  "description": "Your cookie manager",
  "version": "1.0",

  "action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": ["cookies", "tabs"],

  "host_permissions": ["<all_urls>"]
}
